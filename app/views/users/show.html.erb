<div class= "container px-5 px-sm-0">
  <div class= "row">
    
    <div class= "col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>
    
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                 <% if @user.profile_image.attached? %>
                   <%= image_tag @user.get_profile_image(100,100) %>
                 <% else %>
                   <%= image_tag 'no_image', size: "100Ã—100" %>
                 <% end %>
              </td>
              <% @books.each do |book| %>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div  


