<% if flash[:notice] %>
 <div class= "alert alert-success" role="alert">
   <p class= "notice text-center" style="color:green;">
    <%= flash[:notice] %>
   </p>
 </div>
<% end %>
<div class= "container px-5 px-sm-0">
  <div class= "row">

    <div class= "col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>

    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                 <% if @user.profile_image.attached? %>
                   <%= image_tag @user.get_profile_image(100,100) %>
                 <% else %>
                   <%= image_tag 'no_image', size: "100Ã—100" %>
                 <% end %>
              </td>

              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>

            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div


