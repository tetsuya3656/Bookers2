
<h2>User info</h2>

     <%= image_tag user.get_profile_image(100,100) %>

 <table class="table">
   <tbody>
     <tr></tr>
       <tr>
         <th>name</th>
         <th><%= user.name %></th>
       </tr>
       <tr>
         <th>inrtoduction</th>
         <th><%= user.introduction %></th>
       </tr>
   </tbody>
 </table>

   <% if user == current_user %>
     <p>
       <%= link_to edit_user_path(user),class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
       <% end %>
     </p>
   <% else %>
     <p>
       <%= link_to edit_user_path(user),class:"btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
       <% end %>
     </p>
   <% end %>

 <h2 class="mt-3">New book</h2>
   <%= form_with model: book do |f| %>
     <label for="inputTitle">Title</label><br/>
   <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル" %><br/>
     <label for="inputOpinion">Opinion</label><br/>
   <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"感想" %><br/>
   <%= f.submit "Create Book" %>
   <% end %>