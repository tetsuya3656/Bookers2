<% if flash[:notice] %>
 <div class= "alert alert-success" role="alert">
   <p class= "notice text-center" style="color:green;">
    <%= flash[:notice] %>
   </p>
 </div>
<% end %>
<div class= "container px-5 px-sm-0">
  <div class= "row">

    <div class= "col-md-3">
      <%= render 'list', user:@user, book:@book_new %>
    </div>

    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
        <tbody>
          <tr>
            <td>
             <% if @user.profile_image.attached? %>
               <%= image_tag @user.get_profile_image(100,100) %>
             <% else %>
               <%= image_tag 'no_image', size: "100×100" %>
             <% end %><br>
               <%= link_to @user.name, user_path(@user) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to edit_book_path(@book),class:"btn btn-sm btn-success" do %>
              <%= "Edit" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" do %>
              <%= "Destroy" %>
              <% end %>
            </td>
            <% end %>
          </tr>
        </tbody>


        </table>
    </div>
  </div>
</div>
